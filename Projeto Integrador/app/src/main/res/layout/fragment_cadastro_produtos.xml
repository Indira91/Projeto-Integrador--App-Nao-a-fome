<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="#DDFADD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.116"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012"
            app:srcCompat="@drawable/not___hungry" />

        <EditText
            android:id="@+id/editNomeProduto"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle46"
            android:ems="10"
            android:hint="Nome do Produto:"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:shadowColor="#401616"
            android:textColor="#8E8C8C"
            android:textColorHighlight="#635151"
            android:textColorHint="#8E8C8C"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <EditText
            android:id="@+id/editCategoriaProduto"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle46"
            android:ems="10"
            android:hint="Categoria do Produto:"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:shadowColor="#401616"
            android:textColor="#8E8C8C"
            android:textColorHighlight="#635151"
            android:textColorHint="#8E8C8C"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editNomeProduto" />

        <EditText
            android:id="@+id/editValorProduto"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle46"
            android:ems="10"
            android:hint="Valor do Produto:"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:shadowColor="#401616"
            android:textColor="#8E8C8C"
            android:textColorHighlight="#8E8C8C"
            android:textColorHint="#8E8C8C"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCategoriaProduto" />

        <EditText
            android:id="@+id/editQuantidadeProduto"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle46"
            android:ems="10"
            android:hint="Quantidade:"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:shadowColor="#401616"
            android:textColor="#8E8C8C"
            android:textColorHighlight="#8E8C8C"
            android:textColorHint="#8E8C8C"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editValorProduto" />

        <EditText
            android:id="@+id/editImagemProduto"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle46"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:shadowColor="#401616"
            android:text="@string/inserir_imagem"
            android:textColor="#8E8C8C"
            android:textColorHighlight="#8E8C8C"
            android:textColorHint="#8E8C8C"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editQuantidadeProduto" />

        <Button
            android:id="@+id/buttonCadastrar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/fundo_caixa"
            android:backgroundTint="#F5B44A"
            android:fontFamily="@font/baloo_thambi"
            android:text="Cadastrar"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editImagemProduto" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.43"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <View
            android:id="@+id/view6"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:background="#52BD20"
            app:layout_constraintEnd_toEndOf="@+id/editQuantidadeProduto"
            app:layout_constraintHorizontal_bias="0.86"
            app:layout_constraintStart_toStartOf="@+id/editQuantidadeProduto"
            app:layout_constraintTop_toTopOf="@+id/editQuantidadeProduto" />

        <View
            android:id="@+id/view"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:background="#52BD20"
            app:layout_constraintEnd_toEndOf="@+id/editQuantidadeProduto"
            app:layout_constraintHorizontal_bias="0.86"
            app:layout_constraintStart_toStartOf="@+id/editCategoriaProduto"
            app:layout_constraintTop_toTopOf="@+id/editCategoriaProduto" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/editQuantidadeProduto"
            app:layout_constraintEnd_toEndOf="@+id/editQuantidadeProduto"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintStart_toStartOf="@+id/editQuantidadeProduto"
            app:layout_constraintTop_toTopOf="@+id/editQuantidadeProduto"
            app:layout_constraintVertical_bias="0.19"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            app:layout_constraintBottom_toBottomOf="@+id/editCategoriaProduto"
            app:layout_constraintEnd_toEndOf="@+id/editCategoriaProduto"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintStart_toStartOf="@+id/editCategoriaProduto"
            app:layout_constraintTop_toTopOf="@+id/editCategoriaProduto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
